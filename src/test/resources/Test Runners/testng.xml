<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart Application Regression Test Suite" verbose="4" thread-count="3" parallel="tests">

	<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtentReportListener"></listener>
	</listeners>
		

	<test name="Login Page Test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	
	<test name="My Account Page Test">
		<classes>
			<class name="com.qa.opencart.tests.MyAccountPageTest" />
		</classes>
	</test>
	
	<test name="Product Info Page Test">
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
	
	
	

</suite>